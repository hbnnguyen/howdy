// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  username   String        @id @unique
  email      String        @unique
  password   String        @default("")
  name       String        @default("")
  location   String        @default("")
  bio        String        @default("")
  createdAt  DateTime      @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime      @updatedAt @db.Timestamptz(3)
  imageKey   String        @default("defaultProfilePic.jpg")
  usersLiked LikeDislike[] @relation("UsersLiked")
  likedBy    LikeDislike[] @relation("LikedBy")
}

model LikeDislike {
  fromUser   User     @relation("UsersLiked", fields: [fromUserId], references: [username])
  toUser     User     @relation("LikedBy", fields: [toUserId], references: [username])
  fromUserId String
  toUserId   String
  timestamp  DateTime @default(now()) @db.Timestamptz(3)
  liked      Boolean

  @@id([fromUserId, toUserId])
}
